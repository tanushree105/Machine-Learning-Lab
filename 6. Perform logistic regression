
import pandas as pd
import numpy as np


from google.colab import files
uploaded = files.upload()

df = pd.read_csv('Social_Network_Ads.csv')
df.head()

X = df[['Age','EstimatedSalary']]
y = df['Purchased']

from sklearn.model_selection import train_test_split #(train_test_split : data will be split into train and test)

X_train, X_test, y_train, y_test = train_test_split(X,y,test_size = 0.30)

X_train.shape

X_train.isna().sum()

from sklearn.impute import SimpleImputer

imputer = SimpleImputer(missing_values = np.nan, strategy = 'mean') #To convert the na values we have different strategy like mean, medium, mode


imputer.fit(X_train[['Age','EstimatedSalary']])

X_train[['Age','EstimatedSalary']] = imputer.transform(X_train[['Age','EstimatedSalary']])
#tranforms functions fills the missing value

from sklearn import preprocessing
from sklearn.preprocessing import MinMaxScaler

scalar = MinMaxScaler()

scalar.fit(X_train)
X_train = scalar.transform(X_train)
X_test = scalar.transform(X_test)

X_train

from sklearn.linear_model import LogisticRegression

model = LogisticRegression()
model.fit(X_train,y_train)

model.score(X_train,y_train)

model.score(X_test,y_test)
